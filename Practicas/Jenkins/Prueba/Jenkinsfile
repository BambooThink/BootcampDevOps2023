pipeline {
    agent any
    stages {
        stage('SCM checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/BambooThink/BootcampDevOps2023'
            }
        }
        stage('Show a message') {
            steps {
                echo 'We are in the stage of showing a message'
            }
        }
        stage('Ansible Test') {
            steps{
                sh 'ansible-playbook --check -i ./Practicas/ansible/install-jenkins/inventory.ini ./Practicas/ansible/install-jenkins/playbook.yml'
            }
        }
    }
}